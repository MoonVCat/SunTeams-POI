<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="10dp"
    android:layout_marginTop="6dp">

    <LinearLayout

        android:id="@+id/contenedormensaje"
        android:layout_width="246dp"

        android:layout_height="114dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/ivPerfil"
                android:layout_width="71dp"
                android:layout_height="match_parent"
                android:src="@drawable/sun2" />

            <TextView
                android:id="@+id/textNombreSalon"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivPerfil"
                app:layout_constraintTop_toTopOf="@+id/ivPerfil"
                tools:text="Salon" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>