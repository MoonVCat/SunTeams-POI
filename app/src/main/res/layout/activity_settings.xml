<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="#3A7C85">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="208dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="75dp"
        android:src="@drawable/sun2"
        app:civ_border_color="@color/black">

    </de.hdodenhof.circleimageview.CircleImageView>

    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/edit"
        android:hint="username"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


    <TextView
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="366dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="10dp"
        android:text="Encriptar mensajes"
        android:textAlignment="center"
        android:textStyle="bold"></TextView>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/encryptPasswordSwitch"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_user_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="170dp"

        android:layout_marginTop="14dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="10dp"
        android:thumb="@drawable/switch_thumb"
        app:showText="true"
        app:track="@drawable/switch_track"></androidx.appcompat.widget.SwitchCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_status"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_user_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="17dp"
        android:padding="6dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.545">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView_status"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Â¡Hola! Estoy disponible"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/save_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_status"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="15dp"
        android:inputType="textMultiLine"
        android:padding="6dp"
        android:text="Guardar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />



</RelativeLayout>